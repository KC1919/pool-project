    <link rel="stylesheet" href="/css/stock.css">
    <%- include('header.ejs'); -%>
    <div class="header-div">
        <div class="heading-div">
            <h1 style="width: fit-content">Stock Data</h1>
        </div>
        <div class="add-stock-div">
            <button class="new-stock-btn" id="new-stock-btn" type="button" onclick="handleNewStock(event)">Add Item</button>
        </div>

        <div class="edit-stock-div">
            <button class="new-stock-btn" id="edit-stock-btn" type="button" onclick="handleEditStock(event)">Edit Item</button>
        </div>
    </div>

    <div class="sales-table-div">
        <table class="table text-center" id="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#Id</th>
                <th scope="col">Item Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Cost Price</th>
                <th scope="col">Sell Price</th>
              </tr>
            </thead>
            <tbody id="table-body">
              <% itemsData.forEach(item=>{ %>
              <tr class="table-row" id=table-row-<%=item.itemId%>>
                  <td scope="row"><%=item.itemId%></td>
                  <td scope="row"><%=item.name%></td>
                  <td scope="row"><%=item.qty%></td>
                  <td scope="row"><%=item.costPrice%></td>
                  <td scope="row"><%=item.sellPrice%></td>
                  <td scope="row">
                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(event)" id=<%=item.itemId%>>Delete</button>
                  </td>
              </tr>
              <%})%>
      
            </tbody>
        </table>
    </div>

    <div class="edit-stock-form-div" id="edit-item-form-div">
        <form onsubmit="editItem(event)" id="edit-item-form">   
            <div class="form-close-btn-div" onclick="closeEditItemForm(event)">
                <i class="fa-sharp fa-solid fa-xmark fa-lg"></i>
            </div>
            <div class="item-qty-div">
                <div class="form-group form-input-div">
                    <label for="item-name">Select Item</label>
                    <select class="form-select select-item" name="" id="select-item" required>
                      <option value="" selected>Select</option>
                      <% itemsData.forEach(item=>{%>
                        <option data-id=<%=item.itemId%> value=<%=item.name%>><%=item.name%></option>
                    <%})%>
                    </select>
                </div> 
  
                <div class="form-group form-input-div">
                    <label for="quantity">Quantity</label>
                    <input class="form-control" id="edit-item-qty" type="number" name="qty" placeholder="Enter qty." min="1" required>
                </div>
            </div>

            <div class="sell-cost-div">
                <div class="form-group form-input-div">
                    <label for="quantity">Cost Price</label>
                    <input id="edit-cost-price" class="form-control" type="number" placeholder="Cost Price" min="1" required>
                </div>

                <div class="form-group form-input-div">
                    <label for="item-name">Sell Price</label>
                    <input id="edit-sell-price" class="form-control" type="number" placeholder="Sell Price" required>
                </div> 
            </div>
  
            <div class="form-group form-input-div order-btn">
                <button type="submit" class="btn btn-primary btn-sm" >Save</button>
            </div>

        </form>
    </div>

    <div class="add-stock-form-div" id="add-item-form-div">
        <form onsubmit="addNewItem(event)" id="add-item-form">   
            <div class="form-close-btn-div" onclick="closeNewItemForm(event)">
                <i class="fa-sharp fa-solid fa-xmark fa-lg"></i>
            </div>
            <div class="item-qty-div">
                <div class="form-group form-input-div">
                    <label for="item-name">Item Name</label>
                    <input id="item-name" class="form-control" type="text" placeholder="Item name" required>
                </div> 
  
                <div class="form-group form-input-div">
                    <label for="quantity">Quantity</label>
                    <input id="add-item-qty" class="form-control" type="number" placeholder="Enter qty." min="1" required>
                </div>
            </div>

            <div class="sell-cost-div">
                <div class="form-group form-input-div">
                    <label for="quantity">Cost Price</label>
                    <input id="add-cost-price" class="form-control" type="number" placeholder="Cost Price" min="1" required>
                </div>

                <div class="form-group form-input-div">
                    <label for="item-name">Sell Price</label>
                    <input id="add-sell-price" class="form-control" type="number" placeholder="Sell Price" required>
                </div> 
            </div>
  
            <div class="form-group form-input-div order-btn">
                <button type="submit" class="btn btn-primary btn-sm">Add</button>
            </div>

        </form>
    </div>

    <script>
        const itemsData=<%-JSON.stringify(itemsData)%>
    </script>

    <script src="/js/stock.js"></script>
</body>

</html>