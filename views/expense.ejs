    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/sales.css">
    <%- include('header.ejs'); -%>
    <div class="header-div">

        <div class="search-bar-btn-div">
            <div class="search-bar-div">
              <input id="date-input-filter" class="form-control" type="date" placeholder="Search by date" onfocus="this.showPicker()">
            </div>
    
            <div class="search-btn-div">
              <button type="button" class="btn btn-primary btn-sm" onclick="filterByDate(event)">Search</button>
            </div>
          </div>
    
        <div class="heading-div">
            <h1 style="width: fit-content">Expense Data</h1>
        </div>

        <div>
            <button class="new-order-btn" type="button" onclick="handleNewExpense(event)">New Expense</button>
        </div>
    </div>

    <div class="sales-table-div">

        <div class="expense-date-div">
            <h6>Date</h6>
        </div>

        <div class="expense-data-div">
            <% expenseData.forEach(expense=>{ %>

                <div class="expense-table-div">
                    <i><%=new Date(Date.parse(expense.date)).toDateString()%></i>
                    <table class="table text-center expense-table" id="table">

                        <thead class="thead-dark">
                            <tr>
                            <th scope="col">Description</th>
                            <th scope="col">Amount</th>
                            </tr>
                        </thead>
            
                        <tbody id="table-body">
                        
            
                        <% expense.expense.forEach(expData=>{ %>
                            <tr>
                                <td scope="row"><%=expData.description%></td>
                                <td scope="row"><%=expData.amount%></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="day-total-expense-div">
                    <p>Total Expense : <strong><%=expense.totalCost%></strong></p>
                </div>
                <hr>
            <%})%>
        </div>

    </div>

    <div class="add-memship-form-div" id="add-expense-form-div">
        <form onsubmit="addExpense(event)" id="add-expense-form">

            <div class="form-close-btn-div" onclick="closeNewExpenseForm(event)">
                <i class="fa-sharp fa-solid fa-xmark fa-lg"></i>
            </div>

            <div class="memship-input-div">
                <div class="form-group form-input-div">
                    <label for="quantity">Date</label>
                    <input class="form-control" id="new-expense-date" type="date" placeholder="Select Date" onfocus="this.showPicker()" required>
                </div>

                <div class="form-group form-input-div">
                    <label for="description">Expense description</label>
                    <input id="new-expense-desc" class="form-control" type="text" placeholder="Enter Description" required>
                </div>

                <div class="form-group form-input-div">
                    <label for="amount">Expense Amount</label>
                    <input class="form-control" id="new-expense-amount" type="number" placeholder="Enter Amount" required>
                </div>
            </div>  
            <div class="form-group form-input-div add-member-btn-div">
                <button type="submit" class="btn btn-primary btn-sm">Add</button>
            </div>  
        </form>
    </div>
    
    <script src="/js/expense.js"></script>
</body>

</html>