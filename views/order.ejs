<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Order</title>

    <link rel="stylesheet" href="/css/order.css">

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>
    <div class="order-header-div">
      <div class="back-btn-div">
        <button class="back-btn" type="button" onclick="customersPage(event)">Back</button>
      </div>
      <div class="heading-div">
        <h1 style="width: fit-content;">Order</h1>
      </div>
        <div class="add-order-div">
          <button class="new-order-btn" type="button" onclick="handleNewOrder(event)">New Order</button>
        </div>
    </div>

    <div class="order-table-div">
        <table class="table text-center" id="table">
            <thead class="thead-dark">
              <tr>
                <!-- <th scope="col">#</th> -->
                <th scope="col">Item</th>
                <th scope="col">Price/item</th>
                <th scope="col">Qty.</th>
                <th scope="col">Total Price</th>
              </tr>
            </thead>
            <tbody id="table-body">
              <% orderData.forEach(item=>{ %>
              <tr class="table-row" id=table-row-<%=item.itemId%>>
                  <td scope="row"><%=item.itemName%></td>
                  <td><%=item.sellPrice%></td>
                  <td><%=item.qty%></td>
                  <td><%=item.sellPrice*item.qty%></td>

                  <td>
                    <button class="remove-btn" id=<%=item.itemId%> type="button" onclick="removeItem(event)">
                      remove
                    </button>
                  </td>

              </tr>
              <%})%>
      
            </tbody>
          </table>
    </div>

    <div class="order-form-div" id="new-order-form-div">
      <form id="new-order-form">   
          <div class="form-close-btn-div" onclick="closeForm(event)">
              <i class="fa-sharp fa-solid fa-xmark fa-lg"></i>
          </div>
          <div class="item-qty-div">
              <div class="form-group form-input-div">
                  <label for="item-name">Select Item</label>
                  <select class="form-select select-item" name="" id="select-item">
                    <option value="select" selected>Select</option>
                    <% items.forEach(item=>{%>
                      <option id=<%=item.itemId%> value=<%=item.name%>><%=item.name%></option>
                  <%})%>
                  </select>
              </div> 

              <div class="form-group form-input-div">
                  <label for="quantity">Quantity</label>
                  <input class="form-control" id="item-qty" type="number" name="qty" placeholder="Enter quantity" min="1" required>
              </div>
          </div>

          <div class="form-group form-input-div order-btn">
              <button type="submit" class="btn btn-primary btn-sm" onclick="placeOrder(event)">Order</button>
          </div>

      </form>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"
    ></script>

    <script type="text/javascript">
      const items = <%-JSON.stringify(items)%>;
      const cid = <%-cid%>
    </script>

    <script src="/js/order.js"></script>
</body>
</html>